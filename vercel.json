{
  "version": 2,
  "builds": [
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/server/(.*)",
      "dest": "server/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
